{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "paths": {
            "@actions/*": ["./src/actions/*"],
            "@commands/*": ["./src/commands/*"]
        }
    },
    "exclude": ["node_modules/**/*"]
}
